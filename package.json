{
	"name": "jpdemko.me",
	"version": "1.0.0",
	"scripts": {
		"client-start": "npm start --prefix client",
		"server-start": "npm start --prefix server",
		"start": "concurrently \"npm run client-start\" \"npm run server-start\"",
		"client-install": "cd client && npm install",
		"server-install": "cd server && npm install",
		"install-all": "concurrently \"npm run server-install\" \"npm run client-install\"",
		"client-update": "cd client && npm update",
		"server-update": "cd server && npm update",
		"update-all": "concurrently \"npm run server-update\" \"npm run client-update\""
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jpdemko/jpdemko.me.git"
	},
	"author": "Joseph P Demko",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/jpdemko/jpdemko.me/issues"
	},
	"homepage": "https://github.com/jpdemko/jpdemko.me#readme",
	"devDependencies": {
		"concurrently": "^5.3.0"
	}
}
